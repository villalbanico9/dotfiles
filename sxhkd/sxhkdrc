# Terminal
super + Return
  kitty

# Launcher
super + @space
  ~/.config/bin/menu.sh drun	
shift + super + @space
  bspc rule -a \* -o state=floating center=true rectangle=250x60+0+0 && kitty sudo -EH rofi -no-config -no-lazy-grab -show drun -modi drun -theme ~/.config/rofi/launcher.rasi

# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# Restart bspwm
super + shift + r
  bspc wm -r

# Close or kill windows.
super + {_,shift + }w
	bspc node -{c,k}

# Insert receptacle on selected area
super + ctrl + alt + Return
  bspc node newest.!automatic.local --insert-receptacle

# Send node to receptacle
super + ctrl + Return
	bspc node newest.focused.local -n 'any.local.leaf.!window'

# Delete receptacles
super + BackSpace
  bspc node 'any.local.leaf.!window' -k

super + ctrl + BackSpace
  while bspc node 'any.leaf.!window' -k; do :; done

# Node Flags
super + ctrl + {m,x,y,z}
  bspc node -g {marked,locked,sticky,private}

# Focus
alt + Tab
  ~/.config/bin/menu.sh window

super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Switch desktops
super + Tab
	bspc desktop -f last
super + ctrl + {Right,Left}
  bspc desktop -f {next,prev}

# Focus or send to desktops
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Preselect the direction
super + ctrl + alt + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# Cancel the preselection
super + ctrl + alt + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# Resize window
super + alt {Left,Down,Up,Right}
  bspc node -z {left -20 0 || bspc node -z right -20 0, bottom 0 20 || bspc node -z top 0 20, top 0 -20 || bspc node -z bottom 0 -20, right 20 0 || bspc node -z left 20 0}


# Firefox
super + f
	firefox

# BurpSuite
super + b
	burpsuite

# Thunar
super + e
  thunar

# Screenshots
@Print
  flameshot full

super + shift + s
  flameshot gui


# Clipboard
F1
  xclip -o > /tmp/clipboard1 | xclip -selection clipboard
F2
  xclip -o > /tmp/clipboard2 | xclip -selection clipboard
F3
  cat /tmp/clipboard1 | xclip -selection clipboard && cat /tmp/clipboard1 | xclip -selection primary && sleep .1; xdotool key --clearmodifiers ctrl+shift+v
F4
  cat /tmp/clipboard2 | xclip -selection clipboard && cat /tmp/clipboard2 | xclip -selection primary && sleep .1; xdotool key --clearmodifiers ctrl+shift+v


# Powermenu
Pause
  ~/.config/bin/menu.sh run

# Set Target
super + t
  ~/.config/bin/target_set.sh

# Change Layout
super + shift + l
  ~/.config/bin/layout.sh
